{
  "root": true,
  "plugins": ["@typescript-eslint", "barrels"],
  "rules": {
    // Correctness
    "use-isnan": "error",
    "eslint-plugin-unicorn/no-empty-file": "error",
    // Restriction
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-var": "error",
    "@typescript-eslint/no-explicit-any": "error",
    "eslint-plugin-unicorn/no-abusive-eslint-disable": "error",
    "eslint-plugin-unicorn/no-nested-ternary": "error",
    "eslint-plugin-unicorn/prefer-modern-math-apis": "error",
    // Pedantic
    "eqeqeq": "error",
    "no-prototype-builtins": "error",
    "@typescript-eslint/ban-ts-comment": "error",
    "@typescript-eslint/ban-types": "error",
    "eslint-plugin-unicorn/explicit-length-check": "error",
    "eslint-plugin-unicorn/prefer-array-some": "error",
    "eslint-plugin-unicorn/prefer-date-now": "error",
    // Style
    "default-case-last": "error",
    "@typescript-eslint/array-type": ["error", { "default": "array" }],
    "@typescript-eslint/no-empty-interface": ["error", { "allowSingleExtends": true }],
    // Nursery
    "eslint-plugin-import/no-duplicates": "error"
  }
}